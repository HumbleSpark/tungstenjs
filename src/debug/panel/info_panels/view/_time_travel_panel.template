<div class="time_travel_panel">
  <div class="js-sidebar-pane-title sidebar-pane-title <%= panel.collapsed ? '' : 'expanded' %>" data-id="<%= panel.tabName %>">
    Time Travel
  </div>
  <% if (!panel.collapsed && panel.view) { %>
    <div class="sidebar-pane visible">
      <%
        var state = panel.view.getState();
        var slider = state.slider;
        var prevState = slider.prevEnabled ? '' : 'disabled';
        var nextState = slider.nextEnabled ? '' : 'disabled';
       %>
      <button class="time_travel--button js-time-travel-button-first" <%= prevState %>>&laquo;</button>
      <button class="time_travel--button js-time-travel-button-prev" <%= prevState %>>&lsaquo;</button>
      <div class="time_travel--track">
        <% _.each(slider.items, function(item) { %>
          <span style="left:<%= item.left %>%" title="<%= item.label %>" data-index="<%= item.index %>" class="time_travel--item js-time-travel-item <%= item.active ? 'selected' : '' %>"></span>
        <% }) %>
      </div>
      <button class="time_travel--button js-time-travel-button-next" <%= nextState %>>&rsaquo;</button>
      <button class="time_travel--button js-time-travel-button-last" <%= nextState %>>&raquo;</button>
      <div class="c"></div>
      <div><%= slider.currentLabel %> - <%= slider.currentIndex %> / <%= slider.maxIndex %></div>
      <button class="pure-button js-time-travel-button-clear">Clear History</button>
    </div>
  <% } %>
</div>
